{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,

    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
